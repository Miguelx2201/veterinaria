<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.PetController">
   <children>
       <BorderPane prefHeight="400.0" prefWidth="600.0">
           <top>
               <HBox prefHeight="44.0" prefWidth="479.0" BorderPane.alignment="CENTER">
                   <children>
                       <TextField fx:id="buscarNombre" prefHeight="25.0" prefWidth="142.0" text="Buscar por nombre." />
                       <ComboBox fx:id="filtroEspecie" prefHeight="25.0" prefWidth="103.0" />
                       <ComboBox fx:id="filtroPropietario" prefHeight="25.0" prefWidth="108.0" />
                       <Button fx:id="botonFiltrar" mnemonicParsing="false" onAction="#filtrar" text="Filtrar" />
                       <Button fx:id="botonLimpiarFiltros" mnemonicParsing="false" onAction="#limpiarFiltros" prefHeight="25.0" prefWidth="94.0" text="Limpiar filtros" />
                   </children>
               </HBox>
           </top>
           <center>
               <TableView fx:id="tabla" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                   <columns>
                       <TableColumn fx:id="columnaNombre" prefWidth="116.0" text="Nombre" />
                       <TableColumn fx:id="columnaEspecie" prefWidth="94.0" text="Especie" />
                       <TableColumn fx:id="columnaRaza" prefWidth="98.0" text="Raza" />
                       <TableColumn fx:id="columnaEdad" prefWidth="65.0" text="Edad" />
                       <TableColumn fx:id="columnaPropietario" prefWidth="117.0" text="Propietario" />
                   </columns>
               </TableView>
           </center>
           <bottom>
               <GridPane hgap="10.0" vgap="8.0" BorderPane.alignment="CENTER">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <children>
                       <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                               <Label text="Nombre:" />
                               <TextField fx:id="ingresarNombre" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                           <children>
                               <Label prefHeight="17.0" prefWidth="50.0" text="Especie:" />
                               <ComboBox fx:id="ingresarEspecie" prefWidth="150.0" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                           <children>
                               <Label prefHeight="17.0" prefWidth="43.0" text="Raza:" />
                               <TextField fx:id="ingresarRaza" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                               <Label prefHeight="17.0" prefWidth="36.0" text="Edad:" />
                               <TextField fx:id="ingresarEdad" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                           <children>
                               <Label prefHeight="17.0" prefWidth="33.0" text="Peso:" />
                               <TextField fx:id="ingresarPeso" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                               <Label text="Propietario:" />
                               <ComboBox fx:id="ingresarPropietario" prefWidth="150.0" />
                           </children>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3">
                           <children>
                               <Button fx:id="botonAgregar" mnemonicParsing="false" onAction="#agregar" text="Agregar mascota" />
                        <Button fx:id="botonActualizar" mnemonicParsing="false" onAction="#guardarCambios" text="Actualizar mascota" />
                           </children>
                       </HBox>
                       <HBox prefHeight="30.0" prefWidth="299.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                           <children>
                               <Button fx:id="botonEliminar" mnemonicParsing="false" onAction="#eliminar" text="Eliminar mascota" />
                           </children>
                       </HBox>
                   </children>
               </GridPane>
           </bottom>
       </BorderPane>
   </children>
</AnchorPane>
