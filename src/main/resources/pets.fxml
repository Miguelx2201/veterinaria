<VBox prefHeight="692.0" prefWidth="1336.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.PetController">
   <children>
      <HBox prefHeight="18.0" prefWidth="781.0" spacing="8.0">
         <children>
            <TextField fx:id="textoBuscar" promptText="Buscar por nombre, especie o raza." />
            <Button mnemonicParsing="false" onAction="#filtrar" text="Filtrar" />
            <Button mnemonicParsing="false" onAction="#limpiarFiltros" text="Limpiar" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="columnaNombre" minWidth="-1.0" prefWidth="150.0" text="Nombre" />
          <TableColumn fx:id="columnaEspecie" prefWidth="120.0" text="Especie" />
            <TableColumn fx:id="columnaRaza" prefWidth="120.0" text="Raza" />
            <TableColumn fx:id="columnaEdad" prefWidth="100.0" text="Edad" />
            <TableColumn fx:id="columnaPropietario" prefWidth="120.0" text="Propietario" />
            <TableColumn fx:id="columnaId" prefWidth="100.0" text="Id" />
            <TableColumn fx:id="columnaCitas" prefWidth="600.0" text="Citas" />
        </columns>
      </TableView>
      <GridPane hgap="10.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="323.0" minWidth="10.0" percentWidth="18.0" prefWidth="292.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="364.0" minWidth="10.0" percentWidth="32.0" prefWidth="364.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="18.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="32.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nombre:" />
            <Label text="Especie: " GridPane.columnIndex="2" />
            <Label text="Raza" GridPane.rowIndex="1" />
            <Label text="Edad:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label text="Propietario" GridPane.rowIndex="2" />
            <TextField fx:id="ingresarNombre" prefHeight="25.0" prefWidth="126.0" promptText="Ingrese el nombre de la mascota" GridPane.columnIndex="1" />
            <TextField fx:id="ingresarRaza" promptText="Ingrese la raza de la mascota" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="ingresarEdad" promptText="Ingrese la edad en meses de la mascota" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <ComboBox fx:id="elegirEspecie" prefHeight="25.0" prefWidth="409.0" promptText="Seleccione la especie de la mascota" GridPane.columnIndex="3" />
            <ComboBox fx:id="elegirPropietario" prefHeight="25.0" prefWidth="410.0" promptText="Seleccione el propietario de la mascota" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
            <HBox prefHeight="49.0" prefWidth="287.0" spacing="8.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#limpiar" text="Limpiar" />
                        <Button mnemonicParsing="false" onAction="#agregar" text="Agregar" />
                        <Button mnemonicParsing="false" onAction="#eliminar" text="Eliminar" />
                        <Button mnemonicParsing="false" onAction="#guardarCambios" text="Guardar cambios" />
                     </children>
                  </HBox>
               </children></HBox>
            <Label text="Id:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="ingresarId" promptText="Ingrese el id de la mascota" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <HBox spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </HBox>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
   </padding>
