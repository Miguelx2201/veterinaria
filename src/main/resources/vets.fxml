<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding:12;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.VetsController">
   <children>
   
       <HBox spacing="8">
           <children>
               <TextField fx:id="txtBuscar" promptText="Buscar por nombre, apellido, ID o especialidad" />
               <Button onAction="#filtrar" text="Filtrar" />
               <Button onAction="#limpiarFiltros" text="Limpiar" />
           </children>
       </HBox>
   
       <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
           <columns>
               <TableColumn fx:id="colNombre" prefWidth="140" text="Nombre" />
               <TableColumn fx:id="colApellido" prefWidth="140" text="Apellido" />
               <TableColumn fx:id="colId" prefWidth="120" text="ID" />
               <TableColumn fx:id="colTelefono" prefWidth="140" text="Teléfono" />
               <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
               <TableColumn fx:id="colDireccion" prefWidth="200" text="Dirección" />
               <TableColumn fx:id="colTarjeta" prefWidth="120" text="Tarjeta" />
               <TableColumn fx:id="colAnios" prefWidth="90" text="Años Exp." />
               <TableColumn fx:id="colEspecialidad" prefWidth="160" text="Especialidad" />
           </columns>
       </TableView>
   
       <GridPane hgap="10" vgap="8">
           <columnConstraints>
               <ColumnConstraints percentWidth="18" />
               <ColumnConstraints percentWidth="32" />
               <ColumnConstraints percentWidth="18" />
               <ColumnConstraints percentWidth="32" />
           </columnConstraints>
   
           <children>
               <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <TextField fx:id="fNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
               <Label text="Apellido:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
               <TextField fx:id="fApellido" GridPane.columnIndex="3" GridPane.rowIndex="0" />
   
               <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <TextField fx:id="fId" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
               <Label text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <TextField fx:id="fTelefono" GridPane.columnIndex="3" GridPane.rowIndex="1" />
   
               <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <TextField fx:id="fEmail" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" />
   
               <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <TextField fx:id="fDireccion" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
   
               <Label text="Tarjeta:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
               <TextField fx:id="fTarjeta" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
               <Label text="Años Exp.:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
               <TextField fx:id="fAnios" GridPane.columnIndex="3" GridPane.rowIndex="4" />
   
               <Label text="Especialidad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
               <ComboBox fx:id="fEspecialidad" prefHeight="25.0" prefWidth="415.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
               <HBox prefHeight="25.0" prefWidth="1068.0" spacing="8" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="6">
                   <children>
                       <Button onAction="#nuevo" text="Nuevo" />
                       <Button onAction="#agregar" text="Agregar" />
                       <Button fx:id="btnActualizar" onAction="#guardarCambios" text="Guardar cambios" />
                       <Button onAction="#eliminar" text="Eliminar" />
                   </children>
               </HBox>
           </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
       </GridPane>
   </children>
</VBox>
